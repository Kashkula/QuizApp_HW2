<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="qm"
            type="com.aziz.data.pagerAdapter.model.QuestionModel" />

        <variable
            name="vh"
            type="com.aziz.data.pagerAdapter.adapter.QuestionAdapter.ViewHolder" />

        <variable
            name="v"
            type="android.view.View" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="44dp"
                android:paddingEnd="44dp"
                android:text="@{qm.question}"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_multitype"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:ignore="Suspicious0dp">

            <Button
                android:id="@+id/btn_first"
                style="@style/ForBtn"
                android:background="@drawable/for_variants"
                android:onClick="@{(v)->vh.onClick()}"
                android:text="@{qm.first_answer}" />

            <Button
                android:id="@+id/btn_second"
                style="@style/ForBtn"
                android:background="@drawable/for_variants"
                android:onClick="@{(v)->vh.onClick()}"
                android:text="@{qm.second_answer}" />

            <Button
                android:id="@+id/btn_third"
                style="@style/ForBtn"
                android:background="@drawable/for_variants"
                android:onClick="@{(v)->vh.onClick()}"
                android:text="@{qm.third_answer}" />

            <Button
                android:id="@+id/btn_fourth"
                style="@style/ForBtn"
                android:background="@drawable/for_variants"
                android:onClick="@{(v)->vh.onClick()}"
                android:text="@{qm.fourth_answer}" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_boolean"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <Button
                android:id="@+id/btn_fifth"
                style="@style/ForBtn"
                android:background="@drawable/for_variants"
                android:onClick="@{(v)->vh.onClick()}"
                android:text="@{qm.fifth_answer}" />

            <Button
                android:id="@+id/btn_sixth"
                style="@style/ForBtn"
                android:background="@drawable/for_variants"
                android:onClick="@{(v)->vh.onClick()}"
                android:text="@{qm.sixth_answer}" />

        </LinearLayout>

    </LinearLayout>
</layout>
